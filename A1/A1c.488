% This file tests all forms of loop building and loop exit constructs.
{
    % loop guard ✗ test
    var i : Integer
    var j : Integer
    var k : Integer
    var l : Integer
    i := 0
    j := 0
    k := 0
    l := 0
    
    while false do 
        write "✗ while false" 

    while i < -1 do
        write "✗ while 0 < -1" 

    repeat {
        write "✓ repeat until"
    } until i = 0
    
    % loop guard success test
    while i < 5 do {
        write i
        i := i + 1
    }
    write "✓ while loop"

    repeat {
        write "repeat 2"
        k := k + 1
    } until k = 5
    write "✓ repeat loop"
    
    % Exit test
    while true do {
        exit
    }
    write "✓ exit"
    
    while true do {
        while true do {
            while true do {
                 exit 3
            }
        }
    }
    write "✓ exit integer"

    while true do {
        j := j + 1
        exit when j = 7
    }
    write "✓ exit expression"

    while true do {
        while true do {
            l := l + 1
            exit 2 when l = 5
        }
    }
    write "✓ exit integer when"
}
